                <m:mrow>
                  <m:mi>f</m:mi>
                  <m:mo stretchy="false">=</m:mo>
              
                    <m:mtext>4 Hz</m:mtext>
                    
                
                </m:mrow>
              </m:mrow>
            
            <m:mrow/>
          </m:mrow>
